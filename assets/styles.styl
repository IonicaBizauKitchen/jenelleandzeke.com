// backgroundColor = #62700B
backgroundColor = #A0A880
// backgroundColor = #E4E5D8
headingColor = black
textColor = #333
columnWidth = 600px
imageWidth = 600px

@font-face
  font-family springtime
  font-style normal
  src url(/assets/fonts/springtime.ttf)

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family "PT Serif", helvetica, arial
  color textColor
  background backgroundColor url("/assets/images/gingko-tile.png")
  padding 0
  margin 0
  position relative

#content
  background white url("/assets/images/dust.jpg")
  margin 50px auto 100px auto
  padding 30px
  max-width columnWidth
  position relative
  box-shadow 0 0 40px rgba(black, 0.5)
  text-align center
  border-radius 4px

#gingko
  display inline-block
  width 100%

#nav
  text-align center
  li
    display inline-block
    padding 0 20px
    a
      text-decoration none
a
  color textColor

p
  font-size 1rem
  line-height 1.5
  padding: 10px 0
  margin: 0
  a
    text-decoration underline
    color textColor
    padding-right 3px
    padding-left 3px
    margin-right -3px
    margin-left -3px
    &:hover
      color backgroundColor
      background mainColor
      text-decoration none

h1,h2,h3,h4
  text-align center
  font-family springtime
  color headingColor
  line-height 1.2

h1
  font-size 3rem
  opacity 0.7

h1 span
  display block
  font-size 2rem

h2
  margin-top 80px
  letter-spacing 1rem

h3
  font-size 1rem
  letter-spacing 1rem

p
  text-align justify

#footer
  text-align center

img.gingko-leaf-pair
  margin 100px auto 20px auto
