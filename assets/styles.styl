backgroundColor = #af3400
headingColor = black
textColor = #333
columnWidth = 600px

// @extends classes

.boxed-link
  cursor pointer
  font-family springtime
  display inline-block
  padding 8px 10px
  border-radius 2px
  text-decoration none
  line-height 1
  font-size 1.3rem
  border 1px solid rgba(black, 0.4)
  transition all 0.2s
  background none
  &:hover
    background-color mix(backgroundColor, white, 100%)
    color rgba(white, 0.6)
    border-color mix(backgroundColor, white, 100%)
    border-radius 3px
  &:first-child
    margin-left 0
  &:last-child
    margin-right 0


// Global Styles

@font-face
  font-family springtime
  font-style normal
  src url(/assets/fonts/springtime.ttf)

*
  -moz-box-sizing border-box
  -webkit-box-sizing border-box
  box-sizing border-box

html, body
  width 100%
  height 100%

body
  font-family "PT Serif", helvetica, arial
  color textColor
  background backgroundColor url("/assets/images/gingko-tile.png")
  padding 0
  margin 0
  position relative

#content
  background white url("/assets/images/dust.jpg")
  margin 50px auto 100px auto
  padding 0
  max-width columnWidth
  position relative
  box-shadow 0 0 40px rgba(black, 0.5)
  text-align center
  border-radius 6px
  border 0

#padded_content
  padding 0 40px
  // background transparent url("/assets/images/jenelle-and-zeke.png") no-repeat bottom center

#gingko
  display inline-block
  width 100%
  border-radius 6px


ul#nav
  margin 50px 0 0 0
  padding 0
  list-style none
  text-align center
  li
    line-height 4
    display inline-block
    margin 0 10px
  a
    @extend .boxed-link


h1,h2,h3,h4
  text-align center
  font-family springtime
  color headingColor
  line-height 1.5

h1
  font-size 2.7rem
  opacity 0.7
  line-height 1.3

h2
  margin 0
  padding 4rem 0 1rem 0
  letter-spacing 0.6rem
  font-size 1.4rem

h2.date
  margin-top 2rem 0
  padding 0
  font-size 1.2rem
  letter-spacing 0.6rem

p
  font-size 1rem
  line-height 1.5
  padding 0 0 10px 0
  margin 0
  text-align justify

  a
    color backgroundColor
    text-decoration underline

h3.kisses
  letter-spacing 1.2rem
  font-size 1rem
  padding-bottom 30px
  padding-top 100px

a
  color textColor
  &.boxed
    @extend .boxed-link

.centered-container
  display block
  margin 20px 0
  text-align center
  p
    text-align center

form.rsvp
  text-align left

  .field
    margin 20px 0

  label
    display block
    clear both
    line-height 2

  input
    display inline-block
    font-family "PT Serif", helvetica, arial
    font-size 1rem
    padding 4px
    &#rsvp-guests
      width 40px
    &[type=text]
      display block
      width 100%
    &[type=submit]
      @extend .boxed-link
      margin-top 20px
      display inline-block
      webkit-appearance none
      -webkit-appearance none

  .boolean
    label
      display inline-block
      padding-right 20px
      &:last-child
        padding-right 0

  textarea
    width 100%
    min-height 180px
    font-family "PT Serif", helvetica, arial
    font-size 1rem

[class^="form-result"] p
  font-family springtime
  font-size 1.2rem
  letter-spacing 0.1rem
